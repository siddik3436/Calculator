<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}"
    android:layout_marginTop="30sp"
    android:layout_marginLeft="10sp" >

    
    <EditText
    android:id="@+id/editText1" 
    android:layout_below="@+id/editText2"
    android:layout_width="270sp"
    android:layout_height="20sp"
    android:background="#FFFFFF"
    android:gravity="right"
    android:paddingRight="5sp"
    />
    <EditText
    android:id="@+id/editText2"
    android:layout_width="270sp"
    android:layout_height="20sp"
    android:background="#FFFFFF"
    android:gravity="right"
    android:layout_alignParentTop="true"
    
    />
<Button 
    android:id="@+id/button1"
    android:layout_below="@+id/editText1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="1"
    android:textColor="#000"
    android:textSize="14sp"
    android:textStyle="bold"
    />
<Button 
    android:id="@+id/button01"
    android:layout_toRightOf="@+id/button1"
    android:layout_below="@+id/editText1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="2"
    android:textColor="#000"
    android:textSize="14sp"
    android:textStyle="bold"/>
<Button 
    android:id="@+id/button02"
    android:layout_below="@+id/editText1"
    android:layout_toRightOf="@+id/button01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="3"
    android:textColor="#000"
    android:textSize="14sp"
    android:textStyle="bold"/>
<Button 
    android:id="@+id/button03"
    android:layout_below="@+id/editText1"
    android:layout_toRightOf="@+id/button02"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="4"
    android:textColor="#000"
    android:textSize="14sp"
    android:textStyle="bold"/>
<Button 
    android:id="@+id/button04"
    android:layout_below="@+id/button1"
    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="5"
    android:textColor="#000"
    android:textSize="14sp"
    android:textStyle="bold"/>
<Button 
    android:id="@+id/button05"
    android:layout_below="@+id/button02"
    android:layout_toRightOf="@+id/button04"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="6"
    android:textColor="#000"
    android:textSize="14sp"
    android:textStyle="bold"/>
<Button
    android:id="@+id/button06"
    android:layout_below="@+id/button1"
    android:layout_toRightOf="@+id/button05" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="7"
    android:textColor="#000"
    android:textSize="14sp"
    android:textStyle="bold"/>
<Button 
    android:id="@+id/button07"
    android:layout_below="@+id/button04"
   
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="8"
    android:textColor="#000"
    android:textSize="14sp"
    android:textStyle="bold"/>
<Button 
    android:id="@+id/button08"
    android:layout_below="@+id/button04"
    android:layout_toRightOf="@+id/button07"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="9"
    android:textColor="#000"
    android:textSize="14sp"
    android:textStyle="bold"/>

<Button 
    android:id="@+id/button09"
    android:layout_below="@+id/button05"
    android:layout_toRightOf="@+id/button08"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="0"
    android:textColor="#000"
    android:textSize="14sp"
    android:textStyle="bold"/>
<Button 
    android:id="@+id/button11"
    android:layout_below="@+id/button08"
    android:layout_toRightOf="@+id/button15"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="+"
    android:textColor="#000"
    android:textSize="14sp"
    android:textStyle="bold"/>
<Button 
    android:id="@+id/button12"
    android:layout_below="@+id/button03"
    android:layout_toRightOf="@+id/button06"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="-"
    android:textColor="#000"
    android:textSize="14sp"
    android:textStyle="bold"/>

<Button
    android:id="@+id/button13"
    android:layout_below="@+id/button12"
    android:layout_toRightOf="@+id/button09"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="*"
    android:textColor="#000"
    android:textSize="14sp"
    android:textStyle="bold" />
<Button 
    android:id="@+id/button10"
    android:layout_below="@+id/button07"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="."
    android:textColor="#000"
    android:textSize="14sp"
    android:textStyle="bold"
    />

<Button 
    android:id="@+id/button14"
    android:layout_below="@+id/button07"
    android:layout_toRightOf="@+id/button10"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="/"
    android:textColor="#000"
    android:textSize="14sp"
    android:textStyle="bold"/>

<Button
    android:id="@+id/button15"
    android:layout_below="@+id/button08"
    android:layout_toRightOf="@+id/button14"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="="
    android:textColor="#000"
    android:textSize="14sp"
    android:textStyle="bold" />
<Button 
    android:id="@+id/btnClear"
    android:layout_below="@+id/button15"
    android:layout_width="250sp"
    android:layout_height="wrap_content"
    android:text="Clear"/>

</RelativeLayout>
